@model DACS2.Web.ViewModels.Cart.ShoppingVM

@{
    ViewData["Title"] = "Shopping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Cart Start -->
<div class="container-fluid">
    <form asp-action="Shopping" asp-controller="Cart" method="post">
        <div class="row px-xl-5">
            <div class="col-lg-4">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Thông tin khách hàng</span></h5>
                <div class="form-group">
                    <label class="form-label">Tên khách hàng</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-label">Địa chỉ giao hàng</label>
                    <input asp-for="Location" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-label">Số điện thoại</label>
                    <input asp-for="NumberPhone" class="form-control" />
                </div>
            </div>
            <div class="col-lg-5 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>SP</th>
                            <th>Giá giá</th>
                            <th>Màu</th>
                            <th>Size</th>
                            <th>SL</th>
                            <th>Tổng</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="align-middle" id="cart">
                        @*sản phẩm trong giỏ hàng*@
                    </tbody>
                </table>
            </div>
            <div class="col-lg-3">
                <form class="mb-30" action="">
                    <div class="input-group">
                        <input type="text" class="form-control border-0 p-4 text-voucher" placeholder="Coupon Code">
                        <div class="input-group-append">
                            <a class="btn btn-primary voucher">Áp mã</a>
                        </div>
                    </div>
                </form>
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Cart Summary</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="border-bottom pb-2">
                        <div class="d-flex justify-content-between mb-3">
                            <h6>Tổng giá trị</h6>
                            <h6 class="total-price"></h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Giảm giá</h6>
                            <h6 class="font-weight-medium price-voucher"></h6>
                        </div>
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Tổng thanh toán</h5>
                            <h5 class="pay"></h5>
                        </div>
                        <input type="submit" class="btn btn-block btn-primary font-weight-bold my-3 py-3" value="Xác nhận mua hàng"/>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


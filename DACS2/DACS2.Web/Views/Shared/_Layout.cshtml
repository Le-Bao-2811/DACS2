<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DACS2.Web</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/animate.css/animate.min.css" rel="stylesheet" />
    <link href="~/lib/owlcarousel/assets/owl.carousel.css" rel="stylesheet" />
    <link href="~/lib/toastr.js/toastr.min.css" rel="stylesheet" />
    <link href="~/awesome-notifications/style.css" rel="stylesheet" />
    <link href="~/ClientTLE/Style.css" rel="stylesheet" />
    @RenderSection("clientcss", false)
</head>
<body>
    <div class="container-fluid">

        @if (TempData["Messenger"] != null)
        {
            <div class="alert alert-success">
                <strong>Thành công! @TempData["Messenger"]</strong>
            </div>
        }@if (TempData["Err"] != null)
        {
            <div class="alert alert-danger">
                <strong>Thành công! @TempData["Err"]</strong>
            </div>
        }
        <div class="row align-items-center bg-light py-3 px-xl-5 d-none d-lg-flex">
            <div class="col-lg-4">
                <a href="" class="text-decoration-none">
                    <span class="h1 text-uppercase text-primary bg-dark px-2">Multi</span>
                    <span class="h1 text-uppercase text-dark bg-primary px-2 ml-n1">Shop</span>
                </a>
            </div>
            <div class="col-lg-4 col-6 text-left">
                <form asp-action="AllProduct" asp-controller="Home">
                    <div class="input-group">
                        <input name="search" type="text" class="form-control" placeholder="Tìm kiếm sản phẩm">
                        <div class="input-group-append">
                            <span class="input-group-text bg-transparent text-primary">
                                <i class="fa fa-search"></i>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-4 col-6 text-right">
                <p class="m-0">Customer Service</p>
                <h5 class="m-0">+012 345 6789</h5>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <div class="container-fluid bg-dark mb-30">
        <div class="row px-xl-5">
            <div class="col-lg-12">
                <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <span class="h1 text-uppercase text-dark bg-light px-2">Multi</span>
                        <span class="h1 text-uppercase text-light bg-primary px-2 ml-n1">Shop</span>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a asp-action="Index" asp-controller="Home" class="nav-item nav-link active">Trang chủ</a>
                            <a asp-action="AllProduct" asp-controller="Home" class="nav-item nav-link">Sản phẩm</a>
                            <a asp-action="AddReport" asp-controller="Report" class="nav-item nav-link">Phản hồi</a>
                            <a asp-action="Index" asp-controller="NewsHome" class="nav-item nav-link">Tin tức</a>
                        </div>
                        <div class="navbar-nav ml-auto py-0 d-none d-lg-block">
                            <ul class="navbar-nav">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Xin chào @User.Identity.Name</a>
                                        <ul class="dropdown-menu">
                                            @if (User.IsInPermission(AuthConst.Product.UPDATE))
                                            {
                                                <li>
                                                    <a asp-action="Index" asp-controller="Home" asp-area="Admin" class="dropdown-item">
                                                        Quản lý trang web
                                                    </a>
                                                </li>
                                            }
                                            <li><a class="dropdown-item" asp-action="GetCartByUser" asp-controller="Cart">Danh sách đơn hàng của tôi</a></li>
                                            <li><a asp-action="Logout" asp-controller="Auth" class="dropdown-item">Đăng xuất</a></li>
                                        </ul>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a asp-action="Login" asp-controller="Auth" class="nav-item nav-link">Đăng nhập</a>
                                    </li>
                                }
                                <li class="nav-item">
                                    <a asp-action="Shopping" asp-controller="Cart" class="btn px-0 ml-3">
                                        <i class="fas fa-shopping-cart text-primary" style="font-size:35px"></i>
                                        <span class="badge text-secondary border border-secondary rounded-circle js-count"
                                              style="padding-bottom: 2px;">0</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>

    @RenderBody()


    <div class="container-fluid py-5">
        <div class="row px-xl-5">
            <div class="col">
                <div class="owl-carousel vendor-carousel">
                    <div class="bg-light p-4">
                        <img src="~/ClientTLE/img/vendor-1.jpg" alt="">
                    </div>
                    <div class="bg-light p-4">
                        <img src="~/ClientTLE/img/vendor-2.jpg" alt="">
                    </div>
                    <div class="bg-light p-4">
                        <img src="~/ClientTLE/img/vendor-3.jpg" alt="">
                    </div>
                    <div class="bg-light p-4">
                        <img src="~/ClientTLE/img/vendor-4.jpg" alt="">
                    </div>
                    <div class="bg-light p-4">
                        <img src="~/ClientTLE/img/vendor-5.jpg" alt="">
                    </div>
                    <div class="bg-light p-4">
                        <img src="~/ClientTLE/img/vendor-6.jpg" alt="">
                    </div>
                    <div class="bg-light p-4">
                        <img src="~/ClientTLE/img/vendor-7.jpg" alt="">
                    </div>
                    <div class="bg-light p-4">
                        <img src="~/ClientTLE/img/vendor-8.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Vendor End -->
    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-secondary mt-5 pt-5">
        <div class="row px-xl-5 pt-5">
            <div class="col-lg-4 col-md-12 mb-5 pr-3 pr-xl-5">
                <h5 class="text-secondary text-uppercase mb-4">MUTI Shop</h5>
                <p class="mb-4">
                    Đến shop để tìm những sản phẩm ưng ý nhất
                </p>
                <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>22 đường 30/4, p.Xuân Khánh,q.Ninh Kiều,tp.Cần Thơ</p>
                <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>letranhoaibao2811@gmail.com</p>
                <p class="mb-0"><i class="fa fa-phone-alt text-primary mr-3"></i>0522995259</p>
            </div>
            <div class="col-lg-8 col-md-12">
                <div class="row">
                    <div class="col-md-4 mb-5">
                        <h5 class="text-secondary text-uppercase mb-4">Chính sách của shop</h5>
                        <div class="d-flex flex-column justify-content-start">
                            <vc:list-policy-view-components />
                        </div>
                    </div>
                    
                    
                </div>
            </div>
        </div>
        <div class="row border-top mx-xl-5 py-4" style="border-color: rgba(256, 256, 256, .1) !important;">
            <div class="col-md-6 px-xl-0">
                <p class="mb-md-0 text-center text-md-left text-secondary">
                    &copy; <a class="text-primary" href="#">Domain</a>. All Rights Reserved. Designed
                    by
                    <a class="text-primary" href="#">me</a>
                </p>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.js"></script>
    <script src="~/ClientTLE/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/ClientTLE/mail/contact.js"></script>
    <script src="~/ClientTLE/main.js"></script>
    <script src="~/awesome-notifications/index.var.js"></script>
    <script src="~/ClientTLE/Cart.js" asp-append-version="true"></script>
    @RenderSection("clientjs", false)
</body>
</html>

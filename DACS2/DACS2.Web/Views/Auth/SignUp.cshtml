@model DACS2.Web.ViewModels.Auth.ClientSignUpVM

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="text-center">Đăng kí tài khoản</h1>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="SignUp">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="UserName" class="control-label">Tài khoản</label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Mật khẩu</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ComformPassword" class="control-label">Nhập lại mật khẩu</label>
                            <input asp-for="ComformPassword" type="password" class="form-control" />
                            <span asp-validation-for="ComformPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SDT" class="control-label">Số điện thoại</label>
                            <input asp-for="SDT" class="form-control" />
                            <span asp-validation-for="SDT" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Gmail" class="control-label"></label>
                            <input asp-for="Gmail" class="form-control" />
                            <span asp-validation-for="Gmail" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Tạo tài khoản" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>


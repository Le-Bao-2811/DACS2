@{
    ViewData["Title"] = "AllProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Shop Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-3 col-md-4">
            <!-- Price Start -->
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Tìm kiếm theo giá</span></h5>
            <div class="bg-light p-4 mb-30">
                <form asp-action="AllProduct" asp-controller="Home">
                    <vc:fillter-product-view-components />
                </form>
            </div>



        </div>
        <!-- Shop Sidebar End -->
        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-8">
            <div class="row pb-3">

                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6 pb-1">
                            <div class="product-item bg-light mb-4">
                                <div class="product-img position-relative overflow-hidden">
                                    <img class="img-fluid w-100" src="/img/products/@item.pathImgP" alt="">
                                    <div class="product-action">
                                        <a class="btn btn-outline-dark btn-square" asp-action="DeltailsProducts" asp-controller="Home" asp-route-id="@item.Id"><i class="fa fa-search"></i></a>
                                    </div>
                                </div>
                                <div class="text-center py-4">
                                    <div style="text-overflow:ellipsis;overflow:hidden">
                                        <a class="h6 text-decoration-none text-truncate" asp-action="DeltailsProducts" asp-controller="Home" asp-route-id="@item.Id">@item.ProductName</a>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-center mt-2">
                                        <h5>@item.Price.ToString("#,##0") VNĐ</h5>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-center mb-1">
                                        <small class="fa fa-star text-primary mr-1"></small>
                                        <small class="fa fa-star text-primary mr-1"></small>
                                        <small class="fa fa-star text-primary mr-1"></small>
                                        <small class="fa fa-star text-primary mr-1"></small>
                                        <small class="fa fa-star text-primary mr-1"></small>
                                        <small>(99)</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <h1>Không có dữ liệu</h1>
                }

            </div>
            <partial name="_Pager" />
        </div>
        <!-- Shop Product End -->
    </div>
</div>
<!-- Shop End -->
@section clientjs{
    <script src="~/ClientTLE/filterdata.js" asp-append-version="true"></script>
}